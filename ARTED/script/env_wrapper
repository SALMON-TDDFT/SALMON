#
# Wrapper that helps launching Intel MPI jobs using MICs in native and symmetric modes.
#
BINARY=$1
shift

MACHINE=`uname -m`
MIC_POSTFIX=.mic
CPU_POSTFIX=.cpu

ulimit -s unlimited

if [[ "x${MACHINE}" == "xk1om" ]] ; then
  # for Knights Corner
  ${BINARY}${MIC_POSTFIX} $*
else
  # for CPU
  numactl --localalloc ${BINARY}${CPU_POSTFIX} $*
fi
